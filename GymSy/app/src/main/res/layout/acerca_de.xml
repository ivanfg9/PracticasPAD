<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gymsyAcercaDe"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            app:srcCompat="@drawable/gimsy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descripcionAcercaDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este es un proyecto realizado por los alumnos de la asigantura Programación de Aplicaciones para Dispositivos moviles.\nLos integrantes que hemos desarrollado esta aplicación somos Carlos Murcia Morilla, Fernando González Barrado, Iván Fernández Gallardo y Alexandro Bindreiter Pérez.\nVersión: 1.0"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>